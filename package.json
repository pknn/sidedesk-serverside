{
  "name": "sidedesk-serverside",
  "version": "1.0.2",
  "description": "Serverside for Sidedesk application",
  "main": "index.ts",
  "repository": "www.github.com/pknn/sidedesk-serverside",
  "author": "Pakanon Pantisawat",
  "license": "MIT",
  "private": true,
  "scripts": {
    "preinstall": "[ \"$NODE_ENV\" = production ] && exit 0; ./scripts/hooks-init.sh",
    "prebuild": "rm -rf dist",
    "build": "tsc && tsc-alias",
    "start": "node dist",
    "dev": "NODE_ENV=development ts-node-dev --respawn -r tsconfig-paths/register src/index.ts",
    "lint": "eslint 'src/**/*.ts'",
    "test:units": "NODE_ENV=test mocha -r ts-node/register -r tsconfig-paths/register 'tests/units/**/*.test.ts'",
    "test:apis": "NODE_ENV=test mocha -r ts-node/register -r tsconfig-paths/register 'tests/apis/**/*.test.ts'",
    "test": "yarn test:units && yarn test:apis",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "yarn typeorm migration:generate",
    "migration:create": "yarn typeorm migration:create",
    "migration:run": "yarn typeorm migration:run",
    "migration:revert": "yarn typeorm migration:revert",
    "migration:drop": "yarn typeorm schema:drop"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/faker": "^5.5.6",
    "@types/mocha": "^8.2.2",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.12.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "chai": "^4.3.4",
    "chai-exclude": "^2.0.3",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "faker": "^5.5.3",
    "mocha": "^9.0.0",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3",
    "trim-newlines": "^3.0.1",
    "ts-node-dev": "^1.1.6",
    "tsc-alias": "^1.3.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "ts-node": "^10.0.0",
    "consola": "^2.15.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "typeorm": "^0.2.34"
  }
}
